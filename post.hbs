      {{#post}}
        <section class="post-container">
          <header class="post-header">
            <h1 itemprop="name headline" class="post-title"><a href="{{url}}" itemprop="url" data-pjax title="{{{title}}}">{{{title}}}</a></h1>
            {{! A subtitle not available in Ghosts yet }}
            <!--h2 itemprop="about" class="post-subtitle"></h2-->
          </header>
          <div itemprop="articleBody" class="post-body">
          {{content}}
          </div>
          <footer class="post-footer">
          <div class="buttons">
            <a class="subscribe-button" href="/subscribe">Subscribe</a>
            <a class="subscribe-button follow-button" href="http://twitter.com/ben336">Follow</a>
            <a class="subscribe-button comment-button" href="#disqus_thread">Comment</a>
            <a class="subscribe-button email-button" href="mailto:ben@benmccormick.org">Email</a>
          </div>
